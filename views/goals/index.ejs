<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do</title>
</head>
<body>
    <nav>
        <a href="/">Home</a>
    </nav>
    <h1>Here Are Your Goals for Today:</h1>
    <ul>
      <% goals.forEach(function(goal) { %>
        <li>
          <%= goal.text %>
            - 
          <%= goal.done ? 'Done' : 'Not done' %>
        </li>
      <% }); %>
    </ul>
    <a href="/goals/new">Add Goal</a>
</body>
</html>