<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do</title>
</head>
<body>
    <h1>Here Are Your Todos for Today:</h1>
    <ul>
      <% todos.forEach(function(todo) { %>
        <li>
          <%= todo.text %>
            - 
          <%= todo.done ? 'Done' : 'Not done' %>
        </li>
      <% }); %>
    </ul>
    <a href="/todos/new">Add To-do</a>
</body>
</html>