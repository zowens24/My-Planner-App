<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>To-do</title>
</head>
<body>
    <nav>
        <a href="/">Home</a>
    </nav>
    <h1>Here Are Your Todos for Today:</h1>
    <ul>
      <% todos.forEach(function(todo) { %>
        <li>
          <%= todo.todo %>
            - 
          <%= todo.time%>
          <form action="/todos/<%= todo._id %>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
          <a href="/todos/<%= todo._id %>/edit">Edit</a>
        </li>
      <% }); %>
    </ul>
    <a href="/todos/new">Add To-do</a>
</body>
</html>